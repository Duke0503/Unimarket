extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug

block main
    .container.d-flex.flex-row.justify-content-center.my-3.p-0(style="background-color: #ffffff;")
      .col-3.border.border-1.d-flex.flex-column.align-items-center.justify-content-center
        h4 Sản phẩm bán chạy
      +product-grid-main-page(productsFeatured)

    .container.d-flex.flex-row.justify-content-center.my-3.p-0(id="carouselProducts" class="carousel slide" data-ride="carousel" style="background-color: #f9fafc;")
      +product-grid-carousel(productsCategory)
      button(class="carousel-control-prev" type="button" data-target="#carouselProducts" data-slide="prev" style="width: 5%; height: 90%; margin-left: 15px; margin-top: 15px;")
        span(class="carousel-control-prev-icon" aria-hidden="false" style="background-color: #ddd")
        span(class="sr-only") Previous
      button(class="carousel-control-next" type="button" data-target="#carouselProducts" data-slide="next" style="width: 5%; margin-right: 5px")
        span(class="carousel-control-next-icon" aria-hidden="false" style="background-color: #ddd")
        span(class="sr-only") Next

    .container.justify-content-center.my-3.p-0
      h4 Sản phẩm được đề xuất
      .container
        +product-grid(productsNew)